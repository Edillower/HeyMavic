<?xml version="1.0" encoding="utf-8"?>
<!-- @author: Melody Cai, Eddie Wang -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RRFrag"
    tools:context="com.edillower.heymavic.RARFragment">

    <TextView
        android:layout_width="352dp"
        android:layout_height="180dp"
        android:background="@color/view_bg"
        android:textColor="@color/text_whi"
        android:text="Hello, I'm ready for answering your question about DJI Mavic Pro. Please enter your question by text or voice"
        android:id="@+id/RRView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="112dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="55dp"

        android:alpha="0.75"
        android:scrollbars="vertical"/>


    <Button
        android:id="@+id/input_btn2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/mic" />

    <EditText
        android:id="@+id/command_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input_btn2"
        android:layout_toStartOf="@+id/input_btn2"
        android:background="@drawable/common_google_signin_btn_text_dark_normal"
        android:ems="14"
        android:enabled="false"
        android:hint="Hold for Voice Input"
        android:textAlignment="center"
        android:textColor="@color/midware_white_half" />

    <Button
        android:id="@+id/dummy_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input_btn2"
        android:layout_alignStart="@+id/command_text2"
        android:layout_alignTop="@+id/input_btn2"
        android:layout_toStartOf="@+id/input_btn2"
        android:alpha="0" />

</RelativeLayout>
